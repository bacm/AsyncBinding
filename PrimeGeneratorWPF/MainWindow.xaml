        Title="MainWindow" Height="126.316" Width="525">
    <Grid>
        <Button Content="{Binding AvailableAction}" HorizontalAlignment="Left" Margin="10,10,0,0" 
                VerticalAlignment="Top" Width="137" Height="77"
                Command="{Binding RunCommand}"/>
